<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" >

    <FrameLayout
        android:id="@+id/lt_portrait_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/tb_margin"
        android:layout_marginRight="@dimen/tb_margin"
        android:layout_marginTop="20dp" >

        <com.tripsters.sample.view.PortraitTopView
            android:id="@+id/lt_portrait"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_reply"
            android:layout_width="45dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical|right"
            android:background="@drawable/button_light_grey"
            android:gravity="center"
            android:text="@string/requestion"
            android:textColor="@color/tb_light_grey"
            android:textSize="@dimen/text_middle_size" />
    </FrameLayout>

    <com.tripsters.sample.view.TTextView
        android:id="@+id/tv_answer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="@dimen/tb_margin"
        android:layout_marginRight="@dimen/tb_margin"
        android:layout_marginTop="10dp"
        android:textColor="@color/tb_dark_grey"
        android:textSize="@dimen/text_large_size" />

    <ImageView
        android:id="@+id/iv_answer_pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="@dimen/tb_margin"
        android:layout_marginRight="@dimen/tb_margin"
        android:maxHeight="@dimen/image_item_max_size"
        android:maxWidth="@dimen/image_item_max_size" />

    <com.tripsters.sample.view.DataBottomView
        android:id="@+id/lt_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="@dimen/tb_margin"
        android:layout_marginRight="@dimen/tb_margin" />

</merge>