<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" >

    <com.tripsters.sample.view.PortraitTopView
        android:id="@+id/lt_portrait"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/tb_margin"
        android:layout_marginRight="@dimen/tb_margin"
        android:layout_marginTop="20dp" />

    <com.tripsters.sample.view.TTextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/tb_margin"
        android:layout_marginRight="@dimen/tb_margin"
        android:layout_marginTop="10dp"
        android:longClickable="true"
        android:textColor="@color/tb_dark_grey"
        android:textSize="@dimen/text_large_size" />

    <com.tripsters.sample.view.TTextView
        android:id="@+id/tv_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/tb_margin"
        android:layout_marginRight="@dimen/tb_margin"
        android:layout_marginTop="10dp"
        android:longClickable="true"
        android:textColor="@color/tb_light_grey"
        android:textSize="@dimen/text_middle_size" />

    <ImageView
        android:id="@+id/iv_pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/tb_margin"
        android:layout_marginRight="@dimen/tb_margin"
        android:layout_marginTop="10dp"
        android:maxHeight="@dimen/image_detail_max_size"
        android:maxWidth="@dimen/image_detail_max_size" />

    <TextView
        android:id="@+id/tv_tags"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/tb_margin"
        android:layout_marginRight="@dimen/tb_margin"
        android:textColor="@color/tb_light_grey"
        android:textSize="@dimen/text_small_size"
        android:layout_marginTop="10dp" />

    <com.tripsters.sample.view.LocationView
        android:id="@+id/v_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/tb_margin"
        android:layout_marginRight="@dimen/tb_margin"
        android:layout_marginTop="10dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="@dimen/tb_margin"
        android:layout_marginRight="@dimen/tb_margin"
        android:layout_marginTop="10dp" >

        <TextView
            android:id="@+id/tv_time_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:textColor="@color/tb_light_grey"
            android:textSize="@dimen/text_small_size" />

        <TextView
            android:id="@+id/tv_fav_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:textColor="@color/tb_light_grey"
            android:textSize="@dimen/text_small_size" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/tb_divider_grey" />

</merge>