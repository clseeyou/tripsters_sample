<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:style/Theme">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@style/Animation.Activity</item>
    </style>

    <style name="Tripsters" />

    <style name="Tripsters.Dialog" parent="android:Theme.Dialog">

        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 半透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 背景透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 模糊 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 是否有覆盖 -->
        <item name="android:windowContentOverlay">@null</item>
        <!-- 动画 -->
        <!-- <item name="android:windowAnimationStyle">@style/Animation</item> -->
    </style>

    <style name="Animation" parent="android:Animation" />

    <style name="Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/window_enter_right</item>
        <item name="android:activityOpenExitAnimation">@anim/window_exit_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/window_enter_left</item>
        <item name="android:activityCloseExitAnimation">@anim/window_exit_right</item>
        <item name="android:taskOpenEnterAnimation">@anim/window_enter_right</item>
        <item name="android:taskOpenExitAnimation">@anim/window_exit_left</item>
        <item name="android:taskCloseEnterAnimation">@anim/window_enter_left</item>
        <item name="android:taskCloseExitAnimation">@anim/window_exit_right</item>
        <item name="android:taskToFrontEnterAnimation">@anim/window_enter_right</item>
        <item name="android:taskToFrontExitAnimation">@anim/window_exit_left</item>
        <item name="android:taskToBackEnterAnimation">@anim/window_enter_left</item>
        <item name="android:taskToBackExitAnimation">@anim/window_exit_right</item>
    </style>

    <!-- ShareMenuDialog 弹入弹出动画 -->
    <style name="Animation.WindowBubble">
        <item name="android:windowEnterAnimation">@anim/window_bubble_up</item>
        <item name="android:windowExitAnimation">@anim/window_bubble_down</item>
    </style>

    <style name="Animation.WindowFade">
        <item name="android:windowEnterAnimation">@anim/window_fade_in</item>
        <item name="android:windowExitAnimation">@anim/window_fade_out</item>
    </style>

    <style name="divider_view">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/tb_divider_height</item>
        <item name="android:background">@drawable/bg_divider</item>
    </style>

    <style name="title_textview">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/setting_item_title_height</item>
        <item name="android:layout_marginLeft">@dimen/tb_margin</item>
        <item name="android:layout_marginRight">@dimen/tb_margin</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:gravity">bottom</item>
        <item name="android:textColor">@color/tb_light_grey</item>
        <item name="android:textSize">@dimen/text_middle_size</item>
    </style>

    <style name="profile_info_content_layout">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/setting_item_content_height</item>
        <item name="android:background">@drawable/bg_item</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="profile_info_title_textview">
        <item name="android:layout_width">55dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginLeft">@dimen/tb_margin</item>
        <item name="android:textColor">@color/tb_light_grey</item>
        <item name="android:textSize">@dimen/text_middle_size</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="profile_info_content_textview">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingRight">@dimen/tb_margin</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textColor">@color/tb_dark_grey</item>
        <item name="android:textSize">@dimen/text_middle_size</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="profile_info_content_edittext" parent="profile_info_content_textview">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@null</item>
        <item name="android:textColorHint">@color/tb_light_grey</item>
        <item name="android:gravity">right</item>
    </style>

</resources>